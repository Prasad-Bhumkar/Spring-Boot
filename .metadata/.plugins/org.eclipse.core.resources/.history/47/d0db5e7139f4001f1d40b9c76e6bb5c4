package com.seed;

import org.springframework.stereotype.Component;

@Component
public class MyDate {
    private int day;
    private int month;
    private int year;

    //default constructor
    public MyDate() {
        super();
    }
    //parameterized constructor
    public MyDate(int day, int month, int year) {
        this.day = day;
        this.month = month;
        this.year = year;
    }
    //all getter and setter methods
    public int getDay() {
        return day;
    }
    public void setDay(int day) {
        this.day = day;
    }
    public int getMonth() {
        return month;
    }
    public void setMonth(int month) {
        this.month = month;
        }
    public int getYear() {
        return year;
    }
    public void setYear(int year) {
        this.year = year;
    }   
    //toString method
    @Override
    public String toString() {
        return "MyDate [day=" + day + ", month=" + month + ", year=" + year + "]";
    }
}
